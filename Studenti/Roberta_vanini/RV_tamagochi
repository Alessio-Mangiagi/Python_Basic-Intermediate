# ===========================
# CAPITOLO 1: Definizione Classi Animali
# ===========================

class Animali:                  # classe generica per assegnare "nome" ad ogni animale
    def __init__(self, nome):
        self.nome = nome
    
    def exit(self):             # comune a tutti gli animali. Interazione alla chiusura del gioco.
        print(f"{self.nome} ti osserva mentre ti allontani. Aspetterà il tuo ritorno.")

# idea: aggiungi fame/felicità + vita/salute nella classe Animali.
# -> fame e felicità scendono in base al tempo ed in base alle interazioni.
# Alcuni animali hanno bisogno di più attenzioni?

class Cane(Animali):
    def parla(self):
        print(f"Il cane {self.nome} dice: Bau Bau!")
    
    def seduto(self):
        print(f"Dici: 'Seduto!' Il cane {self.nome} si siede")

    def terra(self):
        print(f"Dici: 'A terra!' Il cane {self.nome} si sdraia")

    def bravo(self):
        print(f"Dici: 'Bravo!' Il cane {self.nome} scondinzola e ti lecca")
    
    def biscotto(self):
        print(f"Dai un biscotto a {self.nome}. Salta di gioia e lo sgranocchia con gusto!")

    def osserva(self):
        print(f"Osservi {self.nome}. Il cane ti guarda ed inclina la testa, scodinzolando.")

class Gatto(Animali):
    def parla(self):
        print(f"Il gatto {self.nome} dice: Miao!")
    
    def seduto(self):
        print(f"Dici: 'Seduto!' Il gatto {self.nome} ti ignora")

    def terra(self):
        print(f"Dici: 'A terra!' Il gatto {self.nome} ti ignora")

    def bravo(self):
        print(f"Dici: 'Bravo!' Il gatto {self.nome} ti ignora")
    
    def biscotto(self):
        print(f"Dai un biscotto a {self.nome}. Il gatto osserva il cibo e ci dà qualche colpetto con la zampa.")

    def osserva(self):
        print(f"Osservi {self.nome}. Il gatto si stiracchia e comincia a leccarsi.")

class Pesce(Animali):
    def parla(self):
        print(f"Il pesce {self.nome} boccheggia e ti osserva")
    
    def seduto(self):
        print(f"Dici: 'Seduto!' Il pesce {self.nome} sembra confuso")

    def terra(self):
        print(f"Dici: 'A terra!' Il pesce {self.nome} guarda preoccupato il pavimento")

    def bravo(self):
        print(f"Dici: 'Bravo!' Il pesce {self.nome} nuota felice")
    
    def biscotto(self):
        print(f"Dai un biscotto a {self.nome}. Il pesce avvicina alla superficie per mangiare le briciole!")

    def osserva(self):
        print(f"Osservi {self.nome}. Il pesce nuota nel suo acquario.")

class Pappagallo(Animali):
    def parla(self):
        print(f"Il pappagallo {self.nome} dice: 'Ciao WRAAA!")
    
    def seduto(self):
        print(f"Dici: 'Seduto!' Il pappagallo {self.nome} si accuccia sul tavolo")

    def terra(self):
        print(f"Dici: 'A terra!' Il pappagallo {self.nome} vola sul pavimento")

    def bravo(self):
        print(f"Dici: 'Bravo!' Il pappagallo {self.nome} zompetta felice")
    
    def biscotto(self):
        print(f"Dai un biscotto a {self.nome}. Il pappagallo afferra il biscotto con una zampa e lo sminuzza con il becco.")

    def osserva(self):
        print(f"Osservi {self.nome}. Il pappagallo vola su un trespolo e si sistema le piume con il becco.")


# ===========================
# CAPITOLO 2: Funzione di Interazione
# ===========================

def il_mio_animale():
    nome = input("Qual'è il nome del tuo animale? ")

    while True: # selezione della specie
        specie = input("Di che specie è il tuo animale? ").lower()

        animale = None
        if specie == "cane":
            animale = Cane(nome)
        elif specie == "gatto":
            animale = Gatto(nome)
        elif specie == "pesce":
            animale = Pesce(nome)
        elif specie == "pappagallo":
            animale = Pappagallo(nome)
        else:
            print("Specie non riconosciuta. Al momento puoi scegliere tra: cane, gatto, pesce, pappagallo.")
            continue  # torna a chiedere la specie

        while True: # selezione interazione
            continua = input(f"Vuoi interagire con {nome}? (Y/N) ").lower()
            if continua == "n":
                animale.exit()
                return # chiude il gioco
            elif continua == "y":
                while True:
                    ordine = input(
                        f"Ecco le interazioni possibili:\n"
                        "1. parla\n2. seduto\n3. terra\n4. bravo\n5. biscotto\n6. osserva\n7. vado via\n"
                        "Scrivi il comando: "
                    ).lower()
                    if ordine == "parla" or ordine == "1":
                        animale.parla()
                        print("")
                    elif ordine == "seduto" or ordine == "2":
                        animale.seduto()
                        print("")
                    elif ordine == "terra" or ordine == "3":
                        animale.terra()
                        print("")
                    elif ordine == "bravo" or ordine == "4":
                        animale.bravo()
                        print("")
                    elif ordine == "biscotto" or ordine == "5":
                        animale.biscotto()
                        print("")
                    elif ordine == "osserva" or ordine == "6":
                        animale.osserva()
                        print("")
                    elif ordine == "vado via" or ordine == "7":
                        animale.exit()
                        return # chiude il gioco
                    else:
                        print(f"{nome} è confuso. Non conosce quel comando.\nProva ancora.")
                        continue # torna alle opzioni "ordine"
            else:
                print(f"Non ho capito, le risposte accettate sono Y e N.\nRiprova.")
                continue # torna alle opzioni "ordine"

il_mio_animale() # avvio gioco